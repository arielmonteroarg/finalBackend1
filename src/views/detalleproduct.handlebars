<script>
  function agregarAlCarrito(productId) {
    fetch(`/carrito/agregar/${productId}`, {
      method: 'POST'
    })
    .then(response => {
      if (response.ok) {
        alert('Producto agregado al carrito');
      } else {
        alert('Error al agregar al carrito');
      }
    });
  }
</script>




